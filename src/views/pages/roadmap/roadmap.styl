.roadmap__container
  background white
  display flex
  flex-wrap wrap
  justify-content center
  flex-direction column

.roadmap__header
  display flex
  flex-direction column
  align-items center

.roadmap__main
  flex 1 1 550px
  padding 0 24px
  font-size 14px
  font-family 'Roboto Mono',monospace
  line-height 1.6
  width 100%
  background $backgroundColor

.roadmap__taskboard
  display flex
  flex-direction row
  justify-content flex-start
  gap 16px
  padding 16px 32px 32px
  overflow-x auto
  width 100%

.roadmap__tasklist
  flex 0 0 auto
  min-width 200px
  max-width 400px
  background $backgroundColor
  border-radius 4px
  max-height 500px
  overflow hidden

.roadmap__tasklist-title
  font_size 16px
  font_weight 600
  background $backgroundColor

.roadmap__tasklist-count
  font-size 12px
  font-weight 600
  color $nanoSoftBlue
  position absolute
  top 8px
  right 8px
  background white
  border 1px solid $borderColor
  padding 2px 4px
  border-radius 4px
  font-size 14px

.roadmap__tasklist-tasks
  margin 0 16px 16px
  border-radius 4px
  background white
  box-shadow 0px 3px 1px -2px rgba(0,0,0,0.2),0px 2px 2px 0px rgba(0,0,0,0.14),0px 1px 5px 0px rgba(0,0,0,0.12)
  overflow-y auto
  max-height 400px

.roadmap__footer
  margin 32px auto
  max-width 1100px
  width 100%

.roadmap__body
  margin 0 8px 32px
  min-height 48px
  position relative

  .MuiAccordionDetails-root
    flex-wrap wrap
    padding 0 30px

.roadmap__container .MuiCard-root
  display flex
  flex-direction column
  justify-content space-between

.roadmap__menu
  display flex
  flex-direction column

.roadmap__link
  margin 0 8px
  margin-bottom 8px
  border-color transparent

  .menu__heading
    font-size 16px
    font-weight 600
    color $nanoSoftBlue

.roadmap__link-description
  font-family 'Inter', sans-serif
  font-size 14px
  line-height 20px
  margin-top 4px

@media (min-width 750px)
  .roadmap__container
    padding-top 45px
  .roadmap__main
  .roadmap__tasklist
    border 1px solid lighten($borderColor, 40%)
    border-radius 4px

@media (min-width 900px)
  .roadmap__main
    max-width 800px
    margin 32px auto 64px
