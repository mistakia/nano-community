.account__container
  width 100%
  display flex
  flex-wrap wrap
  padding 64px 16px 0
  max-width 800px
  margin 0 auto
  align-items flex-start

.account__section
.representative__section
  flex 1
  border-radius 6px
  min-height 48px
  display flex
  flex-direction column
  margin 8px

.account__meta
  display flex
  width 100%

.account__section
  &.account__balance
  &.account__address
  &.account__meta
    flex 1 0 100%
    margin-left 0
    margin-right 0

.representative__container
.representative__head
.account__head
  display flex
  flex-wrap wrap
  width 100%

.account__head
  margin-bottom 32px

.account__head
.representative__head
  flex 1 0 100%

.representative__head .representative__section
.account__head .account__section
  background white

.account__section-metrics
  font-family 'IBM Plex Mono', monospace
  padding 16px
  border-bottom 1px solid $borderColor
  text-align center

.account__section-metric-label
  font-size 12px
  font-weight 800
  color rgba(0,0,0,0.8)

.account__section-metric-body
  font-size 24px

.account__alias
  flex 1 1 100%
  font-family 'Montserrat', sans-serif
  padding 0 8px
  min-height 75px

.account__footer
  width 100%
  max-width 1300px
  margin 64px auto

.account__address
  display flex
  font-family 'IBM Plex Mono', monospace
  justify-content center
  min-height 58px
  padding 16px
  font-weight 600
  position relative
  overflow hidden
  overflow-wrap break-word

.account__balance
  display flex
  justify-content center
  padding 0 16px

.representative__network
.representative__telemetry
  .section__heading
    flex 0

.representative__metrics
  flex 1 1 100%
  display flex
  flex-direction column
  margin 16px 0
  overflow hidden

.representative__metrics-menu
  background white
  font-family 'IBM Plex Mono', monospace
  border-radius 6px
  .MuiTab-root
    text-transform capitalize

.representative__metric
  flex 1

.account__unopened
  background white
  border 1px solid $borderColor
  padding 16px
  margin-bottom 192px
  font-family 'IBM Plex Mono', monospace
  p
    font-family 'Inter', sans-serif
    font-size 14px
    margin-bottom 16px
    line-height 1.5
