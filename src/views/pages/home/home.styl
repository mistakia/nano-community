.home__container
  margin 0 auto
  background white

  .menu__container .search__bar
    border 1px solid $borderColor

.home__body
  max-width 1000px
  overflow hidden
  margin 16px auto
  padding 0 16px

.home__sections
  display flex
  flex-wrap wrap
  align-items stretch
  margin-bottom 32px

.home__footer
  display flex
  flex-direction column
  align-items center

@media (min-width 750px)
  .home__body
    border-radius 16px
