.github__issue
  background #ffffff

.github__issue-title
  font-family 'Inter', sans-serif
  font-weight 400
  font-size 10pt
  line-height 1.45
  letter-spacing .005rem
  display block
  word-wrap break-word
  padding 14px 14px 0
  cursor pointer
  &:hover
    color $nanoSoftBlue

.github__issue-meta
  font-family 'Roboto Mono', monospace
  color $nanoBlueGrey
  font-size 10px
  padding 8px 16px
  display flex
  flex-direction row
  align-items center

  div + div
    margin-left 5px
