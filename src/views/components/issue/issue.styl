.issue
  background #ffffff

.issue__title
  font-family 'Inter', sans-serif
  font-weight 400
  font-size 10pt
  line-height 1.45
  letter-spacing .005rem
  display block
  word-wrap break-word
  padding 14px 14px 0
  cursor pointer
  &:hover
    color $nanoSoftBlue

.issue__meta
  font-family 'Roboto Mono', monospace
  color $nanoBlueGrey
  font-size 10px
  padding 8px 16px
  display flex
  flex-direction row
  align-items center

  div + div
    margin-left 5px

.issue__labels
  padding 8px 16px 16px
